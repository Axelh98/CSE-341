<body>


    <h1>Contact List</h1>
    <div class="card-container">
        <% contacts.forEach(contact => { %>
            <div class="card">
                <h3><%= contact.firstName %> <%= contact.lastName %></h3>
                <div class="button-container">
                    <!-- Bot칩n para ver el perfil -->
                    <a href="/contacts/<%= contact._id %>" class="btn-profile">Profile</a>
                    
                    <!-- Bot칩n para editar el contacto -->
                    <a href="/contacts/edit/<%= contact._id %>" class="btn-edit">Edit</a>
                    
                    <!-- Bot칩n para eliminar el contacto -->
                    <form action="/contacts/<%= contact._id %>" method="POST" style="display: inline;">
                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this contact?');">Delete</button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>
    
    <!-- Estilos CSS para las tarjetas y botones -->
    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .card {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 8px;
            width: 200px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }
        .card h3 {
            font-size: 1.5em;
            margin-bottom: 10px;
        }
        .button-container {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }
        .btn-profile, .btn-edit, .btn-delete {
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 5px;
            font-size: 1em;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
        .btn-edit {
            background-color: #ffa500;
        }
        .btn-delete {
            background-color: #f44336;
        }
        .btn-profile:hover, .btn-edit:hover, .btn-delete:hover {
            opacity: 0.8;
        }
    </style>
    



</body>
