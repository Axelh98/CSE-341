<!-- contact-profile.ejs -->
<h1>Contact Profile</h1>
<div class="card">
    <h3><%= contact.firstName %> <%= contact.lastName %></h3>
    <p><strong>Email:</strong> <%= contact.email %></p>
    <p><strong>Favorite Color:</strong> <%= contact.favoriteColor %></p>
    <p><strong>Birthday:</strong> <%= contact.birthday %></p>
    <div class="button-container">
        <!-- Botón para volver al listado de contactos -->
        <a href="/contacts" class="btn-back">Contact List</a>

        <!-- Botón para editar el contacto -->
        <a href="/contacts/edit/<%= contact._id %>" class="btn-edit">Edit</a>

        <!-- Botón para eliminar el contacto -->
        <form action="/contacts/<%= contact._id %>?_method=DELETE" method="POST" style="display: inline">
            <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this contact?');">Delete</button>
        </form>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .card {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 8px;
        width: 300px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        margin: 0 auto;
    }
    .card h3 {
        font-size: 1.5em;
        margin-bottom: 10px;
    }
    .button-container {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
    }
    .btn-back, .btn-edit, .btn-delete {
        padding: 8px 12px;
        border-radius: 5px;
        font-size: 1em;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
    }
    .btn-edit {
        background-color: #ffa500;
    }
    .btn-delete {
        background-color: #f44336;
    }
    .btn-back:hover, .btn-edit:hover, .btn-delete:hover {
        opacity: 0.8;
    }
</style>
